<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.locnguyen.saleclothesapplication.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/splash_fragment">
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.locnguyen.saleclothesapplication.fragment.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_mainFragment_to_clothesInfoFragment"
            app:destination="@id/clothesInfoFragment" >

<!--            <argument-->
<!--                android:name="clothes"-->
<!--                app:argType="com.locnguyen.saleclothesapplication.model.Clothes"-->
<!--                app:nullable="true"-->
<!--                android:defaultValue="@null"/>-->

        </action>
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.locnguyen.saleclothesapplication.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/login_fragment">
        <action
            android:id="@+id/action_loginFragment_to_logupFragment"
            app:destination="@id/logupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/logupFragment"
        android:name="com.locnguyen.saleclothesapplication.fragment.LogupFragment"
        android:label="fragment_logup"
        tools:layout="@layout/logup_fragment">
        <action
            android:id="@+id/action_logupFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/clothesInfoFragment"
        android:name="com.locnguyen.saleclothesapplication.fragment.ClothesInfoFragment"
        android:label="fragment_clothes_info"
        tools:layout="@layout/clothes_info_fragment">
        <argument
            android:name="clothesInfo"
            app:argType="com.locnguyen.saleclothesapplication.model.Clothes" />
    </fragment>

</navigation>