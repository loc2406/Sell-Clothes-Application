<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SaleClothesApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/tinos_regular</item>
        <item name="android:colorPrimary">@color/blue</item>
        <item name="android:colorPrimaryDark">@color/blue</item>
    </style>

    <style name="MySplashScreen" parent="Theme.SplashScreen" >
        <item name="postSplashScreenTheme">@style/Theme.SaleClothesApplication</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="icon">@drawable/logo</item>
        <item name="android:windowBackground">@color/blue</item>
    </style>

    <style name="MyProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/blue</item>
    </style>

    <style name="MySearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/tinos_regular</item>
        <item name="android:textColorHint">@color/blue</item>
    </style>
</resources>